@{
    ViewData["Title"] = "首頁";
}

<div class="text-center">
    <h1 class="display-4 laser-text">
        <i class="fas fa-home me-3 text-primary"></i>歡迎來到 Security Practice.by_Jimmy77733
    </h1>
</div>

<div class="row mt-5">
    <div class="col-md-8">
        <div class="card shadow glass-card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-circle me-2"></i>歡迎回來，@ViewBag.UserName！
                </h4>
            </div>
                <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-info-circle text-info me-2"></i>帳戶資訊</h5>
                        <ul class="list-unstyled lh-lg">
                            <li class="mb-2"><strong>使用者名稱:</strong> @ViewBag.UserName</li>
                            <li class="mb-2"><strong>角色:</strong>
                                @if (ViewBag.UserRole == "Admin")
                                {
                                    <span class="badge bg-danger">@ViewBag.UserRole</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@ViewBag.UserRole</span>
                                }
                            </li>
                            <li><strong>登入時間:</strong> @ViewBag.CurrentTime.ToString("yyyy/MM/dd HH:mm")</li>
                        </ul>
                    </div>
                        <div class="col-md-6">
                        <h5><i class="fas fa-shield-alt text-success me-2"></i>安全狀態</h5>
                        <ul class="list-unstyled lh-lg">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>HTTPS 連線
                                <span class="badge bg-success">已啟用</span>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>JWT 認證
                                <span class="badge bg-success">已驗證</span>
                            </li>
                            <li>
                                <i class="fas fa-check text-success me-2"></i>密碼加密
                                <span class="badge bg-success">BCrypt</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mt-4 glass-card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="fas fa-tasks me-2"></i>可用功能
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="d-grid">
                            <a href="@Url.Action("Profile", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-user-edit me-2"></i>檢視個人資料
                            </a>
                        </div>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-danger">
                                    <i class="fas fa-tachometer-alt me-2"></i>管理員儀表板
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-warning">
                                    <i class="fas fa-users me-2"></i>用戶管理
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow glass-card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>系統狀態
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted laser-text">系統運行時間</small>
                    <div class="progress">
                        <div class="progress-bar bg-success" style="width: 99%">99.9%</div>
                    </div>
                </div>
                <div class="mb-3">
                    <small class="text-muted laser-text">安全等級</small>
                    <div class="progress">
                        <div class="progress-bar bg-info" style="width: 95%">高</div>
                    </div>
                </div>
                <div class="mb-3">
                    <small class="text-muted laser-text">系統負載</small>
                    <div class="progress">
                        <div class="progress-bar bg-warning" style="width: 30%">低</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card shadow mt-4 glass-card">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>安全提醒
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small mb-0">
                    <li class="mb-2">
                        <i class="fas fa-lock text-primary me-2"></i>
                        定期更新您的密碼
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-eye text-info me-2"></i>
                        注意可疑的登入活動
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-shield-alt text-success me-2"></i>
                        不要與他人分享帳戶資訊
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt text-warning me-2"></i>
                        使用完畢後請登出
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 自動更新時間
        setInterval(function() {
            const now = new Date();
            document.title = `${now.getHours().toString().padStart(2, '0')}:${now.getMinutes().toString().padStart(2, '0')} - Security Practice`;
        }, 60000);

        // 頁面載入動畫
        $(document).ready(function() {
            $('.card').hide().fadeIn(800);
        });
    </script>
}
