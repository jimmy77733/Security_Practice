@model IEnumerable<Security_Practice.Models.User>

@{
    ViewData["Title"] = "用戶管理";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container mt-4">
    <h1 class="mb-4 breathing-text">@ViewData["Title"]</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card glass-card">
        <div class="card-header">
            用戶列表
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>使用者名稱</th>
                        <th>電子郵件</th>
                        <th>角色</th>
                        <th>狀態</th>
                        <th>註冊時間</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td><span class="badge bg-@(user.Role == "Admin" ? "success" : "primary")">@user.Role</span></td>
                            <td><span class="badge bg-@(user.IsActive ? "info" : "secondary")">@(user.IsActive ? "啟用" : "停用")</span></td>
                            <td>@user.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>